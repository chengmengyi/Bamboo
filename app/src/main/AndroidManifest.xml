<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.demo.bamboo">

    <application
        android:name=".BambooApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bamboo">
        <activity
            android:name=".page.MainPage"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".page.HomePage"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name=".page.ServerPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.ResultPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.WebPage"
            android:screenOrientation="portrait"/>
    </application>

</manifest>