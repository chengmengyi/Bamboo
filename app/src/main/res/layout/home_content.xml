<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_choose_server"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:src="@drawable/home1"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/top"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/fast"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_choose_server"
        app:layout_constraintLeft_toLeftOf="@id/iv_choose_server"
        app:layout_constraintBottom_toBottomOf="@id/iv_choose_server"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Smart Location"
        android:textColor="@color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toRightOf="@id/iv_logo"
        app:layout_constraintRight_toLeftOf="@id/iv_right"
        app:layout_constraintTop_toTopOf="@id/iv_choose_server"
        app:layout_constraintBottom_toBottomOf="@id/iv_choose_server"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/right"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_choose_server"
        app:layout_constraintRight_toRightOf="@id/iv_choose_server"
        app:layout_constraintBottom_toBottomOf="@id/iv_choose_server" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The connection time"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_choose_server"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:textColor="@drawable/connect_time_color_selector"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_center"
        android:layout_width="296dp"
        android:layout_height="296dp"
        android:src="@drawable/connect"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time"/>
    <View
        android:id="@+id/view_connect"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/connect_btn_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_center"/>
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ffffff_12dp"
        app:layout_constraintTop_toTopOf="@id/view_connect"
        app:layout_constraintLeft_toLeftOf="@id/view_connect"
        app:layout_constraintRight_toRightOf="@id/view_connect"
        app:layout_constraintBottom_toBottomOf="@id/view_connect"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_status"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/home2"
        app:layout_constraintTop_toTopOf="@id/view_connect"
        app:layout_constraintLeft_toLeftOf="@id/view_connect"
        app:layout_constraintRight_toRightOf="@id/view_connect"
        app:layout_constraintBottom_toBottomOf="@id/view_connect"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="40dp"
        android:layout_height="74dp"
        android:src="@drawable/set"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:id="@+id/guide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/guide_lottie_view"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="guide.zip"
        android:layout_marginTop="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_center"/>
</androidx.constraintlayout.widget.ConstraintLayout>