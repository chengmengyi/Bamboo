<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="328dp"
    android:background="@drawable/bg_8f435809_8dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_install"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Install"
                android:textColor="@color/white"
                android:background="@drawable/bg_191a1e_20"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Boom Beach"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/tag"
                app:layout_constraintTop_toTopOf="@id/native_logo"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tag"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:src="@drawable/ad_tag2"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_title"
                app:layout_constraintBottom_toBottomOf="@id/native_title" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintTop_toBottomOf="@id/native_title"/>
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_media"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/native_logo"
                app:layout_constraintBottom_toTopOf="@id/native_install"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover2"
        android:scaleType="fitXY"/>
</RelativeLayout>